<launch>

  <arg name="frequency" default= "10"/>
  
  <arg name = "StartRec" default = "false" />

  <node pkg="beginner_tutorials" 
        name="talker" 
        type="talker"
	output= "screen"
        args = "$(arg frequency)">
  </node>

  <node pkg="beginner_tutorials" 
        name="listener" 
        type="listener"
	launch-prefix = "gnome-terminal --command" 
        output= "screen">
  </node>
 
  <node pkg = "rosbag"
	type = "record"
	name = "rosbag_record_all"
	respawn = "true"
	output = "screen"
	args = "-a -O BagFile"
	if = "$(arg StartRec)">
  </node>

 
</launch>
